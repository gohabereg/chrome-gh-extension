{
  "manifest_version": 2,
  "name": "GitHub Activity",
  "version": "0.0.0",

  "description": "Extension to manage your GitHub activities",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    },
    "default_title": "GitHub Activity",
    "default_popup": "popup.html"
  },
  "author": "Georgy Berezhnoy <gohabereg@gmail.com>",
  "permissions": [
    "identity",
    "http://localhost:3030"
  ]
}
